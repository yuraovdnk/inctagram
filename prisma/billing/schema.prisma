generator client {
  provider = "prisma-client-js"
  output   = "../../node_modules/@prisma/billing"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL_BILLING")
}

model Payments {
  id            String   @id @default(uuid())
  userId        String
  status        String
  planId        String
  currency      String
  paymentMethod String
  amount        Int
  transactionId String?  @unique @map("transactionId")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@map("payments")
}
